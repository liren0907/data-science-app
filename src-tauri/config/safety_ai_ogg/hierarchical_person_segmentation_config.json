            "model_config": {
                "confidence_threshold": 0.4,
                "nms_threshold": 0.45,
                "input_size": {
                    "width": 640,
                    "height": 640
                },
                "color": { "r": 255, "g": 165, "b": 0 },
                "auto_color_by_class": true
            },
            "output_config": {
                "target_classes": [
                    "person", "bicycle", "car", "motorcycle", "airplane", "bus", "train", "truck", "boat",
                    "traffic light", "fire hydrant", "stop sign", "parking meter", "bench", "bird", "cat",
