    "processing_config": {
        "max_parallel_models_per_stage": 4,
        "enable_pipeline_optimization": true,
        "memory_pool_size": "1GB",
        "enable_result_caching": false,
        "max_cache_size": 100,
        "timeout_ms": 45000
