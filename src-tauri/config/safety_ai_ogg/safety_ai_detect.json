{
    "models": [
        {
            "id": "yolov8_detector",
            "name": "YOLOv8s Detector",
            "model_path": "model_weight/yolov8s_openvino_model/yolov8s.xml",
            "device": "CPU",
            "replicas": 1,
            "enabled": true,
            "priority": 1,
            "input_source": {
                "type": "full_frame"
            },
            "model_config": {
                "confidence_threshold": 0.25,
                "nms_threshold": 0.45,
                "input_size": {
                    "width": 640,
                    "height": 640
                },
                "color": { "r": 0, "g": 255, "b": 0 },
                "auto_color_by_class": true
            },
            "output_config": {
                "draw_boxes": true,
                "draw_labels": true,
                "draw_confidence": true,
                "label_format": "{class_name} ({confidence}%) [ID:{track_id}]",
                "class_color_overrides": {
                    "person": { "r": 255, "g": 0, "b": 0 },
                    "car": { "r": 0, "g": 0, "b": 255 },
                    "bicycle": { "r": 255, "g": 165, "b": 0 },
                    "motorcycle": { "r": 255, "g": 20, "b": 147 }
                }
            },
            "retry_config": {
                "enabled": false,
                "max_retries": 3,
                "initial_delay_ms": 100,
                "backoff_factor": 2.0
            }
        }
    ],
    "tracking_config": {
        "enabled": true,
        "tracker_type": "ByteTrack",
        "max_age": 30,
        "min_hits": 3,
        "iou_threshold": 0.3,
        "output_format": "augment_detections",
        "bytetrack_params": {
            "track_thresh": 0.5,
            "track_buffer": 30,
            "match_thresh": 0.8,
            "frame_rate": 30
        }
    },
    "processing_config": {
        "max_parallel_models_per_stage": 4,
        "enable_pipeline_optimization": true,
        "memory_pool_size": "1GB",
        "enable_result_caching": false,
        "max_cache_size": 100,
        "timeout_ms": 30000
    },
    "input_path": "data/test_short.mp4",
    "output_path": "output/safety_ai_detect_test_short.mp4",
    "visualization_config": {
        "show_pipeline_info": true,
        "show_performance_stats": true,
        "color_scheme": "default",
        "font_scale": 0.5,
        "line_thickness": 2,
        "enable_imshow": false
    }
}