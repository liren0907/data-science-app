{
    "models": [
        {
            "id": "yolov8_pose_detector",
            "name": "YOLOv8 Pose Estimation",
            "model_path": "model_weight/openvino/yolov8n-pose_openvino_model/yolov8n-pose.xml",
            "device": "CPU",
            "replicas": 1,
            "enabled": true,
            "priority": 1,
            "input_source": {
                "type": "full_frame"
            },
            "model_config": {
                "confidence_threshold": 0.3,
                "nms_threshold": 0.45,
                "input_size": {
                    "width": 640,
                    "height": 640
                },
                "color": { "r": 255, "g": 0, "b": 0 },
                "auto_color_by_class": true
            },
            "output_config": {
                "draw_boxes": true,
                "draw_labels": true,
                "draw_confidence": true,
                "label_format": "{class_name} ({confidence}%) [POSE]",
                "draw_keypoints": true,
                "keypoint_radius": 3,
                "keypoint_confidence_threshold": 0.3,
                "keypoint_color": { "r": 0, "g": 255, "b": 255 },
                "draw_skeleton": true,
                "skeleton_thickness": 2,
                "skeleton_color": { "r": 255, "g": 255, "b": 0 },
                "skeleton_confidence_threshold": 0.3,
                "target_classes": [
                    "person"
                ],
                "class_color_overrides": {
                    "person": { "r": 255, "g": 0, "b": 0 }
                }
            },
            "retry_config": {
                "enabled": false,
                "max_retries": 3,
                "initial_delay_ms": 100,
                "backoff_factor": 2.0
            }
        }
    ],
    "processing_config": {
        "max_parallel_models_per_stage": 4,
        "enable_pipeline_optimization": true,
        "memory_pool_size": "1GB",
        "enable_result_caching": false,
        "max_cache_size": 100,
        "timeout_ms": 30000
    },
    "input_path": "data/test_short.mp4",
    "output_path": "output/test_short_yolov8_pose_output.mp4",
    "visualization_config": {
        "show_pipeline_info": true,
        "show_performance_stats": true,
        "color_scheme": "default",
        "font_scale": 0.5,
        "line_thickness": 2
    }
} 