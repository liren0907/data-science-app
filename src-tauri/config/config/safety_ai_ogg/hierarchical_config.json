                "enabled": true,
                "priority": 1,
                "specialization": ["person", "bicycle"]
            },
            {
                "id": "secondary_classifier_2",
                "name": "Secondary Region Classifier #2",
                "model_path": "model_weight/yolov8s_openvino_model/yolov8s.xml",
                "confidence_threshold": 0.75,
                "nms_threshold": 0.4,
                "model_input_size": {
                    "width": 224,
